<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/name_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textSize="32sp" />


    <Button
        android:id="@+id/button_show_student"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="2"
        android:drawableEnd="@drawable/ic_baseline_open_in_new_24"
        android:drawableTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_delete_student"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="2"
        android:drawableEnd="@drawable/ic_baseline_delete_24"
        android:drawableTint="#FF5858"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>